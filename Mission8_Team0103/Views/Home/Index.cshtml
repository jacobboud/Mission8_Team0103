@{
    ViewData["Title"] = "Home Page";
}

@model List<Mission8_Team0103.Models.Task>

<div class="container text-center mt-4">
    <h3>Stephen Covey's Time Management Matrix</h3>

    <!-- Header row -->
    <div class="row fw-bold mt-3">
        <div class="col-2"></div> <!-- Empty space for alignment -->
        <div class="col bg-light border py-2">Urgent</div>
        <div class="col bg-light border py-2">Not Urgent</div>
    </div>

    <!-- Quadrants Row 1 -->
    <div class="row">
        <div class="col-2 bg-light border fw-bold py-4">Important</div>
        
        <!-- Quadrant 1 -->
        <div class="col border p-3">
            <h4>Quadrant 1</h4>
            <ul>
                @foreach (var task in Model.Where(t => t.Quadrant == 1 && !t.Completed))
                {
                    <li>
                        @task.TaskName - Due: @task.DueDate?.ToShortDateString()
                        <br />
                        <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                        <form method="post" asp-controller="Home" asp-action="UpdateCompletion">
                            <input type="hidden" name="TaskId" value="@task.TaskId" />
                            <label>Completed:</label>
                            <input type="checkbox" name="Completed" value="true" onchange="this.form.submit()" @(task.Completed ? "checked" : "") />
                        </form>
                    </li>
                }
            </ul>
        </div>

        <!-- Quadrant 2 -->
        <div class="col border p-3">
            <h4>Quadrant 2</h4>
